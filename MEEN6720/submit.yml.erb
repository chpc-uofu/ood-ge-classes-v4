<%-
  emailcmd = '/uufs/chpc.utah.edu/sys/bin/CHPCEmailLookup.sh ' + ENV["USER"]
  emailaddr = %x[ #{emailcmd}]
-%>

batch_connect:
  template: "basic"
cluster: "<%= cluster %>"
script:
  email: <%= emailaddr %>
  native:
    - "-N"
    - "1"
    - "-n"
    - "<%= num_cores %>"
    - "--ntasks-per-node"
    - "<%= num_cores %>"
    - "--mem"
    - "<%= num_memory %>"
    - "-A"
    - "notchpeak-shared-short"
    - "-p"
    - "notchpeak-shared-short"