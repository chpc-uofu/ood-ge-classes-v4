<%-
  emailcmd = '/uufs/chpc.utah.edu/sys/bin/CHPCEmailLookup.sh ' + ENV["USER"]
  emailaddr = %x[ #{emailcmd}]
-%>

---
batch_connect:
  template: vnc
script:
  email: <%= emailaddr %>
  <%- if /frisco/.match(cluster) == nil -%>
  native:
    - "-N"
    - "1"
    - "-n"
    - 1
    - "-A"
    - "<%= my_account %>"
    - "-p"
    - "<%= my_queue %>"
    - "--gres=gpu:a100_80gb_pcie_1g.10gb:1"
  <%- end -%>

